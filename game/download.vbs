Option Explicit' ダウンロードファイルのURLConst url = "https://ddmc.ddlc-jp.com/download/mod_data/latest.zip"Dim http, stream, file, tmp, ret1, ret2, fso, file_statusSet http = CreateObject("Msxml2.ServerXMLHTTP")Set stream = CreateObject("ADODB.Stream")Set fso = CreateObject("Scripting.FileSystemObject")Set file_status = fso.OpenTextFile(".\download_status", 2, True)' ダウンロードファイル名の取得tmp = Split(url, "/")file = tmp(UBound(tmp))' ダウンロードOn Error Resume NextCall http.Open("GET", url, False )http.SendIf(http.status <> 200)Then        http.status = Replace(http.status, vbCrLf, "")        file_status.Write(http.status)        file_status.Close	ret1 = MsgBox("ダウンロード中にエラーが発生しました。",vbCritical,"DDMC MOD DOWNLOADER")	WScript.Quitend if' ダウンロードファイルの保存stream.Openstream.Type = 1stream.Write http.responseBodystream.SaveToFile file, 2stream.Closehttp.status = Replace(http.status, vbCrLf, "")file_status.Write(http.status)file_status.CloseSet stream = NothingSet http = Nothingret2 = MsgBox("ダウンロードが完了しました。",vbInformation,"DDMC MOD DOWNLOADER")